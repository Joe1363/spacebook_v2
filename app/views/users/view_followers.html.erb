<br>
<div class="row follow-space">
  <div class="small-6 columns">

      <h3 class="text-center">Currently Following (<%= @following.length %>):</h3>
      <% if @following != [] %>
        <% @following.each do |f| %>

            <div class="user_box inline">
              <div class="pic">
                <a href="/users/<%= f.id %>" class="no-hover">
                  <% if !f.image.blank? %>
                    <%= image_tag f.image.url(:med), class: "user_thumb" %>
                  <% else %>
                    <img src="/system/user_default.png" class="user_thumb"/>
                  <% end %>
                  <p class="text-center"><%= f.first_name %> <%= f.last_name %></p>
                </a>
              </div>
            </div>

        <% end %>

      <% end %>

  </div>

  <div class="small-6 columns">

      <h3 class="text-center">Current Followers (<%= @yourFollowers.length %>):</h3>
      <% if @yourFollowers != [] %>
        <% @yourFollowers.each do |f| %>

            <div class="user_box inline">
              <div class="pic">
                <a href="/users/<%= f.id %>" class="no-hover">
                  <% if !f.image.blank? %>
                    <%= image_tag f.image.url(:med), class: "user_thumb" %>
                  <% else %>
                    <img src="/system/user_default.png" class="user_thumb"/>
                  <% end %>
                  <p class="text-center"><%= f.first_name %> <%= f.last_name %></p>
                </a>
              </div>
            </div>

        <% end %>
      <% end %>

  </div>

</div><!--end follow-space-->
