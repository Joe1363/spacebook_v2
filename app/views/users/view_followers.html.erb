<br>
<div class="container">
  <div class="row">
    <div class="follow-space">
      <div class="col-md-6">
        <div class="col-md-12 fl-back">
          <h3 class="text-center" id="t12">Currently Following (<%= @following.length %>):</h3>
          <% if @following != [] %>
            <% @following.each do |f| %>
                <div class="col-md-3 user_box inline">
                  <div class="pic">
                    <a href="/users/<%= f.id %>" class="no-hover-color">
                      <% if !f.image.blank? %>
                        <%= image_tag f.image.url(:med), class: "user_thumb" %>
                      <% else %>
                        <img src="/system/user_default.png" class="user_thumb"/>
                      <% end %>
                      <p class="text-center"><%= f.first_name %> <%= f.last_name %></p>
                    </a>
                  </div>
                </div>
            <% end %>
          <% else %>
            <p class="text-center">You aren't currently following any users.</p>
          <% end %>
        </div>
      </div>

      <div class="col-md-6">
        <div class="col-md-12 fl-back">
          <h3 class="text-center" id="t13">Current Followers (<%= @yourFollowers.length %>):</h3>
          <% if @yourFollowers != [] %>
            <% @yourFollowers.each do |f| %>
              <div class="col-md-3 user_box inline">
                <div class="pic">
                  <a href="/users/<%= f.id %>" class="no-hover-color">
                    <% if !f.image.blank? %>
                      <%= image_tag f.image.url(:med), class: "user_thumb" %>
                    <% else %>
                      <img src="/system/user_default.png" class="user_thumb"/>
                    <% end %>
                    <p class="text-center"><%= f.first_name %> <%= f.last_name %></p>
                  </a>
                </div>
              </div>
            <% end %>
          <% else %>
            <p class="text-center">No users are currently following you.</p>
          <% end %>
        </div>
      </div>

    </div><!--end follow-space-->
  </div>
</div>
